.tagcloud a{
    display:block;
    float:left;
    padding:4px 10px;
    margin-right:7px;
    margin-bottom:7px;
    background:#EEE;
    color:#666;
    font-size:11px;
    font-weight:bold;
    text-transform:lowercase;
    text-shadow:1px 1px 1px #FFF;
    -webkit-border-radius:5px;
    -moz-border-radius:5px;
    border-radius:5px;
    border:1px solid #CCC;
    text-decoration:none;
}
.tagcloud a:hover{
    background:#F3F3F3;
    color:#000;
    text-decoration:none;
}
